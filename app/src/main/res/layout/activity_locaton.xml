<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asif.idiot.LocatonActivity">

    <EditText
        android:id="@+id/add_reminder_msg_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="@string/remind_about"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/setLocation_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_reminder_msg_loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="set location"
        android:onClick="PlacePicker"/>

    <TextView
        android:id="@+id/Location_loc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/setLocation_loc"
        android:layout_marginTop="23dp"
        android:text="Location"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#3E2723"/>

    <Spinner
        android:id="@+id/spinner_repeat_loc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Location_loc"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="43dp" />

    <Spinner
        android:id="@+id/spinner_type_loc"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/spinner_repeat_loc"
        android:layout_marginStart="13dp" />

    <Button
        android:id="@+id/save_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_repeat_loc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="@string/save"
        android:textColor="#448AFF"
        android:onClick="save_location"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_weight="2"
    android:background="#EEFF41">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Switch
        android:id="@+id/switch_reminder"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/message_dsply"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/time_dsply"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_dsply"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/switch_reminder"
        android:ems="10"
        android:hint="time display"
        android:inputType="time"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/date_dsply"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/time_dsply"
        android:layout_below="@+id/time_dsply"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Date Display"
        android:inputType="date"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/message_dsply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date_dsply"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/time_dsply"
        android:text="Time:"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date_dsply"
        android:layout_alignStart="@+id/textView2"
        android:text="Date:"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
</android.support.v7.widget.CardView>
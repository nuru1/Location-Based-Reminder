<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/latng_dsply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location_dsply"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/location_dsply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/meassage_loc_dsply"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/meassage_loc_dsply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine"
        android:textSize="25sp" />

    <Switch
        android:id="@+id/switch_location"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/meassage_loc_dsply"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/repeat_dsply"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Repeat display"
        android:inputType="time"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/meassage_loc_dsply"
        android:layout_below="@+id/latng_dsply"
        android:layout_marginStart="7dp"
        android:text="Repeat:"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>